@model IEnumerable<SNShop.Models.Order>

@{
    ViewBag.Title = "List_Orders";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Danh sách đơn hàng cần duyệt</h2>
<h3 class="text-danger">@ViewData["loi"]</h3>
<style>
    table {
        display: block;
        overflow-x: auto;
        overflow-y: auto;
        height: 400px;
        white-space: nowrap;
    }

    td.tool {
        width: 20rem;
        right: 0;
        position: sticky;
        top: auto;
    }
</style>
<a class="btn btn-primary" style="margin-bottom:5px" href="@Url.Action("List_Orders_Approved","Order")">Danh sách đơn hàng đã duyệt</a>
<hr />
<table class="table table-bordered" id="myTable" width="100%" cellspacing="0">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CustomerID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmployeeID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ModifiedDate)
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr id="Delete_Orders_@item.Id">
                <td>
                    @Html.DisplayFor(modelItem => item.CustomerID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmployeeID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ModifiedDate)
                </td>
                <td>
                    <a class="btn btn-warning" href="@Url.Action("Edit_Orders","Order", new { id = item.Id })">Approve</a>
                    <a class="btn btn-info" href="@Url.Action("Details_Orders","Order", new { id = item.Id })">Details</a>
                    <a class="btn btn-danger" onclick="DeleteOrder(@item.Id)">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

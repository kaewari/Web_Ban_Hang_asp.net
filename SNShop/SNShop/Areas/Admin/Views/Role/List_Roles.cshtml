@model IEnumerable<SNShop.Models.Role>

@{
    ViewBag.Title = "List_Roles";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Danh sách role</h2>
<a class="btn btn-primary" style="margin-bottom:5px" href="@Url.Action("Create_Roles","Role")">Thêm role</a>
<h3 class="text-danger">@ViewData["loi"]</h3>
<style>
    table {
        display: block;
        overflow-x: auto;
        overflow-y: auto;
        height: 400px;
        white-space: nowrap;
    }

    td.tool {
        width: 20rem;
        right: 0;
        position: sticky;
        top: auto;
    }
</style>
<table class="table table-bordered" id="myTable" width="100%" cellspacing="0">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                Chức năng
            </th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td class="tool">
                    <a class="btn btn-warning" href="@Url.Action("Edit_Roles","Role", new { id = item.Id })">Edit</a>
                    <a class="btn btn-info" href="@Url.Action("Details_Roles","Role", new { id = item.Id })">Details</a>
                    <a class="btn btn-danger" href="@Url.Action("Delete_Roles","Role", new { id = item.Id })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

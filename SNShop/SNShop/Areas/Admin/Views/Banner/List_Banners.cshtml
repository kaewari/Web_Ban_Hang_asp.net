@model IEnumerable<SNShop.Models.Banner>

@{
    ViewBag.Title = "List_Banners";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Danh sách banner</h2>
<a class="btn btn-primary" href="@Url.Action("Create_Banner_Image","Banner")">Tạo mới</a>
<h3 class="text-danger">@ViewData["loi"]</h3>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.EmployeeID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Path)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ModifiedDate)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr id="Delete_Banner_Image_@item.Id">
            <td>
                @Html.DisplayFor(modelItem => item.EmployeeID)
            </td>
            <td>
                <img src="@item.Path" width="120"/>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModifiedDate)
            </td>
            <td>
                <a class="btn btn-warning" href="@Url.Action("Edit_Banner_Image","Banner", new { id = item.Id })">Edit</a>
                <a class="btn btn-danger" onclick="DeleteBannerImage(@item.Id)">Delete</a>
            </td>
        </tr>
    }
</table>

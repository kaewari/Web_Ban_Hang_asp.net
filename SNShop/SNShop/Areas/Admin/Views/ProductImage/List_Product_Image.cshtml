@model IEnumerable<SNShop.Models.ProductImage>

@{
    ViewBag.Title = "List_Product_Image";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Danh sách sản phẩm</h2>
<a class="btn btn-primary" style="margin-bottom:5px" href="@Url.Action("Create_Product_Image","ProductImage")">Thêm ảnh</a>
<h3 class="text-danger">@ViewData["loi"]</h3>

<table class="table table-bordered" id="myTable" width="100%" cellspacing="0">

    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Thumbnail_Photo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ModifiedDate)
            </th>
            <th>
                Chức năng
            </th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductID)
                </td>
                <td>
                    <img src="@item.Thumbnail_Photo" name="Thumbnail_Photo" id="Thumbnail_Photo" width="100" height="100" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ModifiedDate)
                </td>
                <td>
                    <a class="btn btn-warning" href="@Url.Action("Edit_Product_Image","ProductImage", new { id = item.Id })">Edit</a>
                    <a class="btn btn-info" href="@Url.Action("Details_Product_Image","ProductImage", new { id = item.Id })">Details</a>
                    <a class="btn btn-danger" href="@Url.Action("Delete_Product_Image","ProductImage", new { id = item.Id })">Delete</a>
                </td>
            </tr>
        }
    </tbody>

</table>

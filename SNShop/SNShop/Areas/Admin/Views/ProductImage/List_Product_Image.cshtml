@model IEnumerable<SNShop.Models.ProductImage>

@{
    ViewBag.Title = "List_Product_Image";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Danh sách ảnh sản phẩm</h2>
<div style="display:flex; justify-content:space-between">
    <a class="btn btn-primary" href="@Url.Action("Create_Product_Image_2","ProductImage")">Tạo mới</a>
    <a class="btn btn-danger" onclick="DeleteAllProductImage()">Delete All</a>
</div>
<h3 class="text-danger">@ViewData["loi"]</h3>
<style>
    table {
        display: block;
        overflow-x: auto;
        overflow-y: auto;
        height: 400px;
        white-space: nowrap;
    }

    td.tool {
        width: 20rem;
        right: 0;
        position: sticky;
        top: auto;
    }
</style>
<table class="table table-bordered" id="myTable" width="100%" cellspacing="0">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Thumbnail_Photo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ModifiedDate)
            </th>
            <th>
                Chức năng
            </th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr id="Product_Image_@item.Id">
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.Name)
                </td>
                <td>
                    <img loading="lazy" src="@item.Thumbnail_Photo" name="Thumbnail_Photo" id="Thumbnail_Photo" width="100" height="100" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ModifiedDate)
                </td>
                <td class="tool">
                    <a class="btn btn-warning" href="@Url.Action("Edit_Product_Image","ProductImage", new { id = item.Id })">Edit</a>
                    <a class="btn btn-info" href="@Url.Action("Details_Product_Image","ProductImage", new { id = item.Id })">Details</a>
                    <a class="btn btn-danger" onclick="DeleteProductImage(@item.Id)">Delete</a>
                </td>
            </tr>
        }
    </tbody>

</table>

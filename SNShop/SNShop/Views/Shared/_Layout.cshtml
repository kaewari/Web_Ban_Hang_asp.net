    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</head>
<body>
    <div class="wrap">
        <div class="header">
            <div class="headertop_desc">

                <div class="call">
                    <p><span>Need help?</span> call us <span class="number">1-22-3456789</span></p>
                </div>
                <div class="account_desc">
                    <ul>
                        @if (session == null)
                        {
                            <li>@Html.ActionLink("Register", "Register", "Account")</li>
                            <li>@Html.ActionLink("Login", "Login", "Account")</li>
                        }
                        else
                        {
                            <li><span style="color:red">Xin chào:</span><a href="@Url.Action("ShowProfile", "Account")"><span><img src="@session.Picture" width="25" height="25" /></span> @session.UserName</a></li>
                            <li>@Html.ActionLink("Logout", "Logout", "Account")</li>

                        }

                    </ul>
                </div>
                <div class="clear"></div>
            </div>
            <div class="header_top">
                <div class="logo">
                    <a href="@Url.Action("Index","Home")"><img src="/asset/client/images/logo.png" alt="" /></a>
                </div>
                <div class="cart">
                    <a href="@Url.Action("ListCart","Cart")"><i class="fa-solid fa-cart-shopping"></i></a>
                    <p>
                        <div id="dd" class="wrapper-dropdown-2">
                            <span id="dd1">@ViewBag.Countproduct</span> sản phẩm
                            <ul class="dropdown">
                                <li>Bạn có <span id="dd2">@ViewBag.Countproduct</span> sản phẩm trong giỏ hàng</li>
                            </ul>
                        </div>
                    </p>
                </div>
                <script type="text/javascript">
                    function DropDown(el) {
                        this.dd = el;
                        this.initEvents();
                    }
                    DropDown.prototype = {
                        initEvents: function () {
                            var obj = this;

                            obj.dd.on('click', function (event) {
                                $(this).toggleClass('active');
                                event.stopPropagation();
                            });
                        }
                    }

                    $(function () {

                        var dd = new DropDown($('#dd'));

                        $(document).click(function () {
                            // all dropdowns
                            $('.wrapper-dropdown-2').removeClass('active');
                        });

                    });</script>
                <div class="clear"></div>
            </div>
            <div class="header_bottom">
                <div class="menu">
                    <ul>
                        <li class="active">@Html.ActionLink("Index", "Index", "Home")</li>
                        <li>@Html.ActionLink("About", "About", "Home")</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                        <li> <div class="clear"></div></li>
                    </ul>
                </div>
                <div class="search_box">
                    <form>
                        <input type="text" name="SearchString" placeholder="Nhập tên sản phẩm" value="@ViewBag.CurrentFilter" />
                        <input type="submit" class="btn btn-danger" value="Search" />
                    </form>
                </div>
                <div class="clear"></div>
            </div>
            @RenderSection("slide", required: false)

        </div>
        <div class="main">
            @RenderBody()
        </div>
    </div>
    <div class="footer">
        <div class="wrap">
            <div class="section group">
                <div class="col_1_of_4 span_1_of_4">
                    <h4>Information</h4>
                    <ul>
                        <li><a href="about.html">About Us</a></li>
                        <li><a href="contact.html">Customer Service</a></li>
                        <li><a href="#">Advanced Search</a></li>
                        <li><a href="delivery.html">Orders and Returns</a></li>
                        <li><a href="contact.html">Contact Us</a></li>
                    </ul>
                </div>
                <div class="col_1_of_4 span_1_of_4">
                    <h4>Why buy from us</h4>
                    <ul>
                        <li><a href="about.html">About Us</a></li>
                        <li><a href="contact.html">Customer Service</a></li>
                        <li><a href="#">Privacy Policy</a></li>
                        <li><a href="contact.html">Site Map</a></li>
                        <li><a href="#">Search Terms</a></li>
                    </ul>
                </div>
                <div class="col_1_of_4 span_1_of_4">
                    <h4>My account</h4>
                    <ul>
                        <li><a href="contact.html">Sign In</a></li>
                        <li><a href="index.html">View Cart</a></li>
                        <li><a href="#">My Wishlist</a></li>
                        <li><a href="#">Track My Order</a></li>
                        <li><a href="contact.html">Help</a></li>
                    </ul>
                </div>
                <div class="col_1_of_4 span_1_of_4">
                    <h4>Contact</h4>
                    <ul>
                        <li><span>+91-123-456789</span></li>
                        <li><span>+00-123-000000</span></li>
                    </ul>
                    <div class="social-icons">
                        <h4>Follow Us</h4>
                        <ul>
                            <li><a href="#" target="_blank"><img src="/asset/client/images/facebook.png" alt="" /></a></li>
                            <li><a href="#" target="_blank"><img src="/asset/client/images/twitter.png" alt="" /></a></li>
                            <li><a href="#" target="_blank"><img src="/asset/client/images/skype.png" alt="" /> </a></li>
                            <li><a href="#" target="_blank"> <img src="/asset/client/images/dribbble.png" alt="" /></a></li>
                            <li><a href="#" target="_blank"> <img src="/asset/client/images/linkedin.png" alt="" /></a></li>
                            <li><div class="clear"></div></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="copy_right">
            <p>&copy; 2013 home_shoppe. All rights reserved | Design by <a href="http://w3layouts.com/">W3layouts</a></p>
        </div>
    </div>
    <script type="text/javascript">
        $(document).ready(function () {
            $().UItoTop({ easingType: 'easeOutQuart' });

        });</script>
    <a href="#" id="toTop"><span id="toTopHover"> </span></a>
</body>
</html>
@RenderSection("scripts", required: false)
